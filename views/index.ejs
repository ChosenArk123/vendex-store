                            <circle cx="165" cy="165" r="8" fill="#7DD3FC" opacity="0.4"/>
                            <circle cx="165" cy="35" r="8" fill="#7DD3FC" opacity="0.4"/>
                            <circle cx="35" cy="165" r="8" fill="#7DD3FC" opacity="0.4"/>
