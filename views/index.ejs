    </div>
    <% var uniqueCategories=[]; if (products && products.length> 0) {
        var allCategories = products.map(function(p) {
        var cat = p.google_product_category || p.google_category || "";
        if (cat && typeof cat === 'string') {
        var parts = cat.split(">");return parts[parts.length - 1].trim();
        }
        return "";
        }).filter(function(c) { return c !== ""; });
