    <div id="demo-splash" class="fixed inset-0 z-[60] flex items-center justify-center bg-black/80 backdrop-blur-sm transition-opacity duration-300 hidden opacity-0">
        <div class="bg-card text-card-foreground p-8 rounded-3xl shadow-2xl max-w-md w-full mx-4 text-center transform transition-all duration-300 scale-95 opacity-0" id="demo-content">
