<%- include('partials/layout_start', { title: 'Vendex | Store' }) %>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between gap-4 mb-8">
    <div>
      <div class="text-xs font-black uppercase tracking-[0.22em] text-muted-foreground">Vendex</div>
      <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight mt-2">Shop</h1>
      <p class="text-sm md:text-base text-muted-foreground mt-2">Premium product; consistent vibe.</p>
    </div>

    <form action="/" method="GET" class="w-full sm:w-[420px] ui-card rounded-full shadow-none p-1">
      <input
        type="search"
        name="search"
        value="<%= searchQuery || '' %>"
        placeholder="Search products..."
        class="w-full px-5 py-3 rounded-full outline-none border border-transparent bg-transparent
               text-foreground placeholder:text-muted-foreground
               focus:ring-4 focus:ring-primary/20
               transition-all duration-300 ease-emphasized"
      />
    </form>
  </div>

  <% if (!products || products.length === 0) { %>
    <div class="ui-card p-10 text-center rounded-3xl">
      <div class="text-5xl mb-4">ðŸ«¥</div>
      <div class="text-2xl font-extrabold tracking-tight">No products found</div>
      <p class="text-muted-foreground mt-2">Try a different search term.</p>
      <a href="/" class="inline-flex mt-6 chip hover:bg-secondary-container/60 transition">Clear search â†’</a>
    </div>
  <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% products.forEach(function(p){ 
        var imageUrl = (p.image && String(p.image).trim()) ? p.image : "https://placehold.co/600x600?text=No+Image";
      %>

        <!-- Card is a div (NOT an <a>) to avoid nesting anchors -->
        <div
          class="ui-card group p-6 rounded-3xl cursor-pointer
                 hover:-translate-y-1 hover:shadow-2xl
                 transition-all duration-300 ease-emphasized"
          role="link"
          tabindex="0"
          onclick="window.location.href='/product/<%= p.id %>'"
          onkeydown="if(event.key==='Enter'||event.key===' ') window.location.href='/product/<%= p.id %>'"
        >

          <!-- 1:1 image tile (unchanged vibe, but fixed structure) -->
          <div class="relative aspect-square rounded-3xl overflow-hidden
                      bg-secondary-container/20 border border-border/40">
            <img
              src="<%= imageUrl %>"
              alt="<%= p.title %>"
              class="w-full h-full object-cover
                     transition-transform duration-700 ease-emphasized
                     group-hover:scale-[1.04]"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent pointer-events-none"></div>
          </div>

          <div class="mt-5">
            <div class="text-xs font-black uppercase tracking-[0.18em] text-primary mb-2"><%= p.brand || 'Vendex' %></div>
            <div class="font-extrabold text-lg leading-tight line-clamp-2 min-h-[3rem]"><%= p.title %></div>

            <div class="mt-4 flex items-center justify-between">
              <div class="text-2xl font-extrabold text-primary">$<%= Number(p.price || 0).toFixed(2) %></div>

              <!-- Button is NOT an <a> (avoids nested anchors) -->
              <button
                type="button"
                class="btn btn-soft text-sm px-4 py-2"
                onclick="event.stopPropagation(); window.location.href='/product/<%= p.id %>'"
              >
                View â†’
              </button>
            </div>
          </div>
        </div>

      <% }) %>
    </div>
  <% } %>
</section>

