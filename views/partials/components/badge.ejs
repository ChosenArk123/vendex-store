<header class="sticky top-0 z-40 bg-card/60 backdrop-blur-xl shadow-sm border-b border-white/5 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center gap-3">
        <a href="/" class="text-4xl font-extrabold text-primary tracking-tight">Vendex</a>
      </div>

      <div class="flex items-center gap-3">
        <button
          onclick="toggleTheme()"
          class="p-3 rounded-full hover:bg-secondary-container/60 transition-all duration-300 ease-emphasized active:scale-90"
          aria-label="Toggle theme" title="Toggle theme"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="4" />
            <path d="M12 2v2" /><path d="M12 20v2" />
            <path d="m4.93 4.93 1.41 1.41" /><path d="m17.66 17.66 1.41 1.41" />
            <path d="M2 12h2" /><path d="M20 12h2" />
            <path d="m6.34 17.66-1.41 1.41" /><path d="m19.07 4.93-1.41 1.41" />
          </svg>
        </button>

        <% if (typeof rightLink !== 'undefined' && rightLink) { %>
          <a href="<%= rightLink.href %>"
             class="text-sm font-semibold text-muted-foreground hover:text-primary transition flex items-center gap-2">
            <span><%= rightLink.label %></span>
            <span class="text-lg">â†’</span>
          </a>
        <% } %>
      </div>
    </div>
  </div>
</header>
