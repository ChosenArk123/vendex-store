<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 <%= className || '' %>">
  <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-8">
    <div>
      <% if (eyebrow) { %>
        <div class="text-xs font-black uppercase tracking-[0.22em] text-muted-foreground"><%= eyebrow %></div>
      <% } %>
      <% if (title) { %>
        <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight mt-2"><%= title %></h1>
      <% } %>
      <% if (subtitle) { %>
        <p class="text-sm md:text-base text-muted-foreground mt-2 max-w-2xl"><%= subtitle %></p>
      <% } %>
    </div>

    <% if (typeof actionsHtml !== 'undefined' && actionsHtml) { %>
      <div class="flex items-center gap-2"><%- actionsHtml %></div>
    <% } %>
  </div>

  <%- bodyHtml %>
</section>
