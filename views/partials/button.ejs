<%
  const v = (variant || 'primary'); // primary | hero | soft | ghost
  const base =
    "btn inline-flex items-center justify-center gap-2 font-extrabold " +
    "rounded-full select-none whitespace-nowrap";

  const map = {
    primary: "btn-primary",
    hero: "btn-hero",
    soft: "btn-soft",
    ghost: "btn-ghost"
  };

  const cls = `${base} ${map[v] || map.primary} ${className || ''}`;
%>

<% if (href) { %>
  <a href="<%= href %>" class="<%= cls %>">
    <span class="relative z-10"><%= label %></span>
  </a>
<% } else { %>
  <button
    type="<%= type || 'button' %>"
    class="<%= cls %>"
    <%= disabled ? 'disabled' : '' %>
  >
    <span class="relative z-10"><%= label %></span>
  </button>
<% } %>
