<div class="fixed inset-0 -z-10 pointer-events-none overflow-hidden">
  <div class="absolute -top-28 -left-28 w-[42rem] h-[42rem] rounded-full blur-[120px] animate-blob"
       style="background: var(--ambientA); animation-delay: 0s;"></div>

  <div class="absolute -top-28 -right-28 w-[34rem] h-[34rem] rounded-full blur-[120px] animate-blob"
       style="background: var(--ambientB); animation-delay: 2s;"></div>

  <div class="absolute -bottom-40 left-1/3 w-[46rem] h-[46rem] rounded-full blur-[150px] animate-blob"
       style="background: color-mix(in oklab, var(--primary) 10%, transparent); animation-delay: 4s;"></div>

  <div class="absolute inset-0 opacity-100 mix-blend-overlay"
       style="background-image: radial-gradient(circle at 1px 1px, var(--dot) 1px, transparent 0);
              background-size: 18px 18px;"></div>
  
  <div class="absolute inset-0"
     style="
       opacity: var(--dotOpacity);
       mix-blend-mode: var(--dotBlend);
       background-image: radial-gradient(circle at 1px 1px, var(--dot) 1px, transparent 0);
       background-size: 18px 18px;
     "></div>
</div>