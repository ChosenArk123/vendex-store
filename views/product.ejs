<%
  // Safe primitives (avoid crashes if DB fields are messy)
  const safeTitle = product?.title || 'Product';
  const safeBrand = product?.brand || 'Vendex';
  const safeDesc = product?.description || 'No description available.';
  const safeImage = (product?.image && String(product.image).trim()) ? product.image : "https://placehold.co/900x900?text=No+Image";
  const safePrice = Number(product?.price || 0);
  const rating = product?.rating || '4.5';
  const reviews = product?.reviews || '10';

  // Normalize availability across formats: "in stock", "in_stock", "In Stock"
  const availRaw = (product?.availability || '').toString();
  const availNorm = availRaw.trim().toLowerCase().replace(/\s+/g, '_');
  const inStock = (availNorm === 'in_stock' || availNorm === 'instock' || availNorm === 'available');
%>

<%- include('partials/layout_start', { title: safeTitle + ' | Vendex', rightLink: { href: '/', label: 'Back to Shop ←' } }) %>

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="flex items-center justify-between mb-8 animate-enter">
    <a href="/"
       class="chip inline-flex items-center gap-2 hover:bg-secondary-container/60 transition-all duration-300 ease-emphasized">
      <span class="text-lg">←</span>
      <span>Back to Shop</span>
    </a>
    <div></div>
  </div>

  <div class="grid md:grid-cols-2 gap-12 lg:gap-20 items-start">

    <div class="space-y-4 animate-enter">
      <div class="relative aspect-square rounded-3xl overflow-hidden shadow-lg border border-border/50 bg-secondary-container/10">
        <img
          src="<%= safeImage %>"
          alt="<%= safeTitle %>"
          class="w-full h-full object-contain hover:scale-105 transition-transform duration-700 ease-emphasized"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/15 to-transparent pointer-events-none"></div>
      </div>

      <div class="flex flex-wrap items-center gap-2">
        <span class="chip text-primary"><%= safeBrand %></span>
        <span class="chip text-muted-foreground">ID: <%= product.id %></span>
      </div>
    </div>

    <div class="flex flex-col gap-8 animate-enter" style="animation-delay: 100ms;">
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="flex items-center gap-1 text-yellow-500">
            <span>★</span>
            <span class="font-extrabold"><%= rating %></span>
            <span class="text-muted-foreground ml-1 text-sm">(<%= reviews %> Reviews)</span>
          </div>
        </div>

        <h1 class="text-4xl sm:text-5xl font-extrabold mb-4 leading-tight tracking-tight">
          <%= safeTitle %>
        </h1>

        <div class="flex items-center gap-4 mb-6">
          <div class="text-4xl font-extrabold text-primary">$<%= safePrice.toFixed(2) %></div>

          <% if (inStock) { %>
            <span class="chip bg-emerald-100 border-emerald-200 text-emerald-800">
              <span class="relative flex h-2.5 w-2.5">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
              </span>
              In Stock
            </span>
          <% } else { %>
            <span class="chip bg-red-100 border-red-200 text-red-800">
              <%= availRaw || 'Out of Stock' %>
            </span>
          <% } %>
        </div>

        <p class="text-lg text-muted-foreground leading-relaxed mb-8"><%= safeDesc %></p>

        <div class="flex gap-4">
          <button onclick="addToCartFromDetail()"
            class="flex-1 btn-hero py-4 px-8 rounded-full font-extrabold text-lg shadow-lg hover:shadow-xl hover:-translate-y-1 active:scale-[0.98]
            transition-all duration-300 ease-emphasized flex items-center justify-center gap-3">
            <svg class="transition-transform group-active:scale-125" xmlns="http://www.w3.org/2000/svg"
              width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor"
              stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="8" cy="21" r="1" /><circle cx="19" cy="21" r="1" />
              <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12" />
            </svg>
            Add to Cart
          </button>

          <button
            type="button"
            class="heart-btn p-4 rounded-full border border-border bg-card/70 text-muted-foreground hover:bg-secondary-container/60 hover:text-destructive hover:border-transparent transition-all duration-300 ease-emphasized"
            data-id="<%= product.id %>"
            onclick="toggleHeart(this, event)"
            aria-label="Add to wishlist"
            title="Wishlist"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
              fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
            </svg>
          </button>
        </div>
      </div>

      <div class="space-y-4 border-t border-border pt-8">
        <details open class="ui-card overflow-hidden rounded-3xl">
          <summary class="flex cursor-pointer items-center justify-between p-5 font-extrabold hover:bg-secondary-container/30 transition">
            <span>Key Features</span>
            <span class="text-muted-foreground">▾</span>
          </summary>
          <div class="px-5 pb-5 text-muted-foreground">
            <% if (product.features && Array.isArray(product.features) && product.features.length) { %>
              <ul class="space-y-3">
                <% product.features.forEach(function(feature){ %>
                  <li class="flex items-start gap-3">
                    <span class="text-primary font-black">✓</span>
                    <span><%= feature %></span>
                  </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p>No specific features listed for this item.</p>
            <% } %>
          </div>
        </details>

        <details open class="ui-card overflow-hidden rounded-3xl">
          <summary class="flex cursor-pointer items-center justify-between p-5 font-extrabold hover:bg-secondary-container/30 transition">
            <span>Shipping & Returns</span>
            <span class="text-muted-foreground">▾</span>
          </summary>
          <div class="px-5 pb-5 text-muted-foreground">
            <p>Fast shipping worldwide. Returns accepted within 30 days if the item is in original condition.</p>
          </div>
        </details>
      </div>
    </div>
  </div>
</section>

<div id="cart-backdrop" onclick="toggleCart()"
  class="fixed inset-0 bg-black/60 backdrop-blur-sm z-40 hidden transition-opacity duration-500 ease-emphasized opacity-0"></div>

<div id="cart-drawer"
  class="fixed right-0 top-0 h-full w-full max-w-md bg-card z-50 shadow-2xl flex flex-col transform translate-x-full transition-transform duration-500 ease-emphasized border-l border-border">
  <div class="flex items-center justify-between p-6 border-b border-border bg-card/80 backdrop-blur-xl">
    <h2 class="text-2xl font-extrabold tracking-tight">Shopping Cart</h2>
    <button onclick="toggleCart()" class="p-2 hover:bg-secondary-container rounded-full transition-all duration-200 active:scale-90">✕</button>
  </div>
  <div id="cart-items-container" class="flex-1 overflow-y-auto p-6 space-y-6"></div>
  <div id="cart-footer" class="border-t border-border p-6 space-y-6 hidden bg-card/80 backdrop-blur-xl">
    <div class="space-y-3">
      <div class="flex justify-between text-muted-foreground"><span class="font-medium">Subtotal</span><span id="cart-subtotal">$0.00</span></div>
      <div class="flex justify-between text-muted-foreground"><span class="font-medium">Tax (10%)</span><span id="cart-tax">$0.00</span></div>
      <div class="flex justify-between pt-4 border-t border-border font-extrabold text-2xl text-foreground">
        <span>Total</span><span id="cart-total" class="text-primary">$0.00</span>
      </div>
    </div>
    <button onclick="checkout()" class="w-full btn-hero py-4 px-6 rounded-full shadow-lg hover:shadow-xl hover:-translate-y-1 active:scale-[0.98] transition-all duration-300 ease-emphasized font-extrabold text-lg">
      Proceed to Checkout
    </button>
  </div>
</div>

<%- include('partials/components/toast') %>

<script id="product-data" type="application/json"><%- JSON.stringify(product) %></script>

<script>
  // Wishlist
  let wishlist = (JSON.parse(localStorage.getItem('vendex_wishlist')) || []).map(Number);

  function toggleHeart(btn, e){
    e.preventDefault();
    e.stopPropagation();

    const id = Number(btn.dataset.id);
    const svg = btn.querySelector('svg');
    const has = wishlist.includes(id);

    if (has){
      wishlist = wishlist.filter(x => x !== id);
      svg.setAttribute('fill','none');
    } else {
      wishlist.push(id);
      svg.setAttribute('fill','currentColor');
      btn.classList.add('scale-125');
      setTimeout(()=>btn.classList.remove('scale-125'),200);
    }

    localStorage.setItem('vendex_wishlist', JSON.stringify(wishlist));
  }

  function initWishlist(){
    document.querySelectorAll('.heart-btn').forEach(btn=>{
      const id = Number(btn.dataset.id);
      if (wishlist.includes(id)) btn.querySelector('svg').setAttribute('fill','currentColor');
    });
  }

  // Cart Logic
  let cart = [];

  function loadCart(){
    const saved = localStorage.getItem('vendex_cart');
    if(saved){
      try { cart = JSON.parse(saved) || []; }
      catch { cart = []; }
      updateCartUI();
    } else {
      updateCartUI();
    }
  }

  function saveCart(){
    localStorage.setItem('vendex_cart', JSON.stringify(cart));
    updateCartUI();
  }

  function toggleCart(){
    const drawer = document.getElementById('cart-drawer');
    const backdrop = document.getElementById('cart-backdrop');
    const isOpen = !drawer.classList.contains('translate-x-full');
    if(isOpen){
      drawer.classList.add('translate-x-full');
      backdrop.classList.remove('opacity-100');
      setTimeout(()=>backdrop.classList.add('hidden'), 500);
    } else {
      backdrop.classList.remove('hidden');
      setTimeout(()=>{
        drawer.classList.remove('translate-x-full');
        backdrop.classList.add('opacity-100');
      }, 10);
    }
  }

  function updateQuantity(id, change){
    id = Number(id);
    const item = cart.find(i => Number(i.id) === id);
    if(!item) return;

    item.quantity = Number(item.quantity || 0) + change;
    if(item.quantity <= 0) cart = cart.filter(i => Number(i.id) !== id);
    saveCart();
  }

  function removeItem(id){
    id = Number(id);
    cart = cart.filter(i => Number(i.id) !== id);
    saveCart();
  }

  function updateCartUI(){
    const container = document.getElementById('cart-items-container');
    const footer = document.getElementById('cart-footer');
    const badge = document.getElementById('cart-badge');

    const totalItems = cart.reduce((a,i)=> a + Number(i.quantity || 0), 0);
    if (badge){
      badge.innerText = totalItems;
      totalItems>0 ? badge.classList.remove('hidden') : badge.classList.add('hidden');
    }

    if(cart.length===0){
      container.innerHTML = `<div class="text-muted-foreground">Your cart is empty</div>`;
      footer.classList.add('hidden');
      return;
    }

    container.innerHTML = cart.map(item => `
      <div class="flex gap-4 bg-secondary-container/30 rounded-2xl p-3">
        <img src="${item.image || ''}" class="w-20 h-20 object-cover rounded-xl flex-shrink-0" />
        <div class="flex-1 min-w-0">
          <div class="font-extrabold line-clamp-1">${item.title || 'Item'}</div>
          <div class="text-primary font-extrabold">$${Number(item.price || 0).toFixed(2)}</div>
        </div>
        <div class="flex flex-col items-end justify-between">
          <button onclick="removeItem(${Number(item.id)})" class="text-muted-foreground hover:text-destructive">✕</button>
          <div class="flex items-center gap-2 bg-card/60 rounded-full px-2 py-1 border border-border/50">
            <button onclick="updateQuantity(${Number(item.id)}, -1)" class="w-6 h-6 font-extrabold">-</button>
            <span class="w-4 text-center font-extrabold">${Number(item.quantity || 0)}</span>
            <button onclick="updateQuantity(${Number(item.id)}, 1)" class="w-6 h-6 font-extrabold">+</button>
          </div>
        </div>
      </div>
    `).join('');

    const subtotal = cart.reduce((a,i)=> a + (Number(i.price || 0) * Number(i.quantity || 0)), 0);
    const tax = subtotal * 0.1;

    document.getElementById('cart-subtotal').innerText = `$${subtotal.toFixed(2)}`;
    document.getElementById('cart-tax').innerText = `$${tax.toFixed(2)}`;
    document.getElementById('cart-total').innerText = `$${(subtotal+tax).toFixed(2)}`;

    footer.classList.remove('hidden');
  }

  async function checkout(){
    const button = document.querySelector('#cart-footer button');
    const original = button.innerHTML;
    button.innerText = "Processing...";
    button.disabled = true;

    try{
      const res = await fetch('/create-checkout-session', {
        method:'POST',
        headers:{ 'Content-Type':'application/json' },
        body: JSON.stringify({ cart })
      });
      const data = await res.json();
      if(data.url) window.location.href = data.url;
      else throw new Error('No URL');
    } catch(err){
      alert('Checkout failed');
      button.innerHTML = original;
      button.disabled = false;
    }
  }

  const currentProduct = JSON.parse(document.getElementById('product-data').textContent);

  function addToCartFromDetail(){
    const id = Number(currentProduct.id);
    const existing = cart.find(i => Number(i.id) === id);

    if(existing) existing.quantity = Number(existing.quantity || 0) + 1;
    else cart.push({ ...currentProduct, id, price: Number(currentProduct.price || 0), quantity: 1 });

    saveCart();
    if (typeof showToast === 'function') showToast('Added to cart');
    toggleCart();
  }

  loadCart();
  initWishlist();
</script>

<%- include('partials/layout_end') %>