<%
  // --- CRASH PREVENTION ---
  // We use the ?. operator and || defaults so the page NEVER crashes if data is missing.
  
  const orderIdShort = order._id ? order._id.toString().slice(-6) : '000000';
  const status = (order.status || 'pending').toUpperCase();
  
  // Safe Customer Data
  const customerName = (order.customer && order.customer.name) ? order.customer.name : 'Valued Customer';
  const customerEmail = (order.customer && order.customer.email) ? order.customer.email : '';
  
  // Safe Address Data
  const addr = order.shippingAddress || {};
  const displayAddress = (addr.line1 && addr.city)
    ? `${addr.line1}, ${addr.city}, ${addr.state || ''} ${addr.postal_code || ''}`
    : 'Address details not available';

  const orderTotal = order.totalAmount ? (order.totalAmount / 100).toFixed(2) : '0.00';
%>

<%- include('partials/layout_start', {
  title: `Order #${orderIdShort}`,
  showCart: false,
  headerRightHtml: `
    <a href="/" class="chip bg-secondary-container/50 hover:bg-secondary-container">
      Shop More
      <span class="ml-1">→</span>
    </a>
  `
}) %>

<section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center mb-12 animate-enter">
    <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-emerald-100 text-emerald-600 mb-6 border border-emerald-200">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
    </div>
    <h1 class="text-4xl md:text-5xl font-extrabold tracking-tighter mb-4">You're all set!</h1>
    <p class="text-lg text-muted-foreground">
      Order ID: <span class="font-mono text-primary font-extrabold tracking-widest">#<%= orderIdShort %></span>
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
    <div class="lg:col-span-8 animate-enter" style="animation-delay: 80ms;">
      <div class="ui-card p-8 h-full rounded-3xl">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-10">
          <div>
            <h2 class="text-2xl font-extrabold tracking-tight">Shipping Progress</h2>
            <p class="text-muted-foreground mt-1">Status updated <span class="text-foreground font-bold">Just Now</span></p>
          </div>
          <div class="chip bg-primary/10 text-primary border-primary/20">
            <%= status %>
          </div>
        </div>

        <div class="relative mb-16 px-2">
          <div class="absolute top-5 left-0 w-full h-2 bg-secondary-container/50 rounded-full"></div>
          <div id="progress-bar" class="absolute top-5 left-0 h-2 bg-primary rounded-full transition-all duration-1000 ease-emphasized shadow-[0_0_15px_rgba(91,63,214,0.4)]" style="width: 25%"></div>

          <div class="relative flex justify-between">
            <% ['Placed', 'Shipped', 'On Way', 'Arrived'].forEach((label, i) => { %>
              <div class="flex flex-col items-center gap-4">
                <div class="progress-node w-10 h-10 rounded-full bg-secondary-container text-muted-foreground flex items-center justify-center z-10 border-4 border-card font-black text-sm transition-all duration-500">
                  <%= i + 1 %>
                </div>
                <span class="text-[10px] font-black uppercase tracking-widest text-muted-foreground"><%= label %></span>
              </div>
            <% }) %>
          </div>
        </div>

        <div class="bg-secondary-container/30 rounded-3xl p-8 border border-border/40">
          <h3 class="font-extrabold mb-4 flex items-center gap-2 text-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            Shipping To
          </h3>
          <p class="text-lg font-bold text-foreground"><%= customerName %></p>
          <p class="text-muted-foreground leading-relaxed mt-1"><%= displayAddress %></p>
        </div>
      </div>
    </div>

    <div class="lg:col-span-4 space-y-6 animate-enter" style="animation-delay: 160ms;">
      <div class="ui-card p-6 rounded-3xl">
        <h3 class="text-xl font-extrabold mb-6">Summary</h3>
        <div class="space-y-4">
          <% (order.items || []).forEach(item => { %>
            <div class="flex justify-between items-center gap-4">
              <div class="flex-1 min-w-0">
                <p class="font-bold truncate text-sm"><%= item.title %></p>
                <p class="text-xs text-muted-foreground">Qty: <%= item.quantity %></p>
              </div>
              <p class="font-mono font-bold">$<%= (item.price * item.quantity).toFixed(2) %></p>
            </div>
          <% }) %>
          <div class="border-t border-border/40 pt-4 mt-4">
            <div class="flex justify-between font-black text-xl">
              <span>Total</span>
              <span class="text-primary">$<%= orderTotal %></span>
            </div>
          </div>
        </div>
      </div>

      <div class="ui-card p-6 rounded-3xl border-primary/20 bg-primary/5">
        <h3 class="text-lg font-extrabold mb-2">Live Updates</h3>
        <p class="text-sm text-muted-foreground mb-6">We'll send tracking alerts to your inbox.</p>
        
        <div class="space-y-3">
          <input type="email" id="emailInput" value="<%= customerEmail %>" 
                 class="w-full px-5 py-4 rounded-2xl bg-card border border-border/60 outline-none focus:ring-4 focus:ring-primary/10 transition-all font-bold"
                 placeholder="Enter email...">
          <button onclick="savePreference('email')" 
                  class="w-full btn-hero py-4 rounded-full font-black text-sm uppercase tracking-widest shadow-lg active:scale-95">
            Enable Alerts
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/components/toast') %>

<script>
  // Safe Order ID for JS
  const orderId = "<%= order._id %>";
  const progressBar = document.getElementById('progress-bar');
  const nodes = document.querySelectorAll('.progress-node');

  function updateVisualStatus(percent) {
    if(!progressBar) return;
    progressBar.style.width = percent + '%';
    const activeIndex = percent >= 100 ? 3 : percent >= 75 ? 2 : percent >= 50 ? 1 : 0;
    
    nodes.forEach((node, i) => {
      if (i <= activeIndex) {
        node.classList.remove('bg-secondary-container', 'text-muted-foreground');
        node.classList.add('bg-primary', 'text-white', 'shadow-lg', 'scale-110');
      }
    });
  }

  // Initial check
  updateVisualStatus(25); 

  async function savePreference(type){
    const value = document.getElementById('emailInput').value;
    if(!value || !value.includes('@')) return alert("Please enter a valid email");

    const btn = event.target;
    const originalText = btn.innerHTML;
    btn.innerHTML = 'SYNCING...';
    btn.disabled = true;

    try{
      const res = await fetch(`/api/order/${orderId}/notify`, {
        method:'POST',
        headers:{ 'Content-Type':'application/json' },
        body: JSON.stringify({ method:'email', value })
      });
      const data = await res.json();

      if(data.success){
        btn.className = "w-full bg-emerald-500 text-white font-black py-4 rounded-full shadow-xl cursor-default uppercase tracking-widest transition-all";
        btn.innerHTML = `✓ ALERTS ON`;
        if(typeof showToast === 'function') showToast('Email notifications active!');
      } else {
        throw new Error();
      }
    } catch(err){
      btn.innerHTML = "TRY AGAIN";
      btn.disabled = false;
      setTimeout(()=> btn.innerHTML = originalText, 2000);
    }
  }

  // Status Polling
  setInterval(async ()=>{
    try{
      const res = await fetch(`/api/order/${orderId}/status`);
      if(!res.ok) return;
      const data = await res.json();
      updateVisualStatus(data.percent);
    } catch(err){}
  }, 8000);
</script>

<%- include('partials/layout_end') %>